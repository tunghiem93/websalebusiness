@model ProjectWebSaleLand.Shared.Model.Customer.CustomerModels
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng kí thông tin</title>
    <link rel="SHORTCUT ICON" href="/favicon.ico" />
    <!-- jQuery -->
    <script type="text/javascript" src="@Url.Content("~/Libaraies/vendors/jquery/dist/jquery.min.js")"></script>
    <link rel="stylesheet" href='@Url.Content("~/Libaraies/vendors/bootstrap/dist/css/bootstrap.min.css")'>

    <!--Bootstrap-->
    <script src="@Url.Content("~/Libaraies/vendors/bootstrap/dist/js/bootstrap.min.js")"></script>
    <link href="@Url.Content("~/Content/css/styles2.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/signup.css")" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="header-line"></div>
        <a href="/">
            <div class="wrapper">
            </div>
        </a>
    </nav>

    <div class="container" style="margin-top:2.3%; ">
        <h1 class="well" style="text-align:center">Đăng Ký</h1>
        <div class="col-lg-12 well">
            <div class="row">
                @using (@Html.BeginForm("SignUp", "Login", FormMethod.Post, new { @class = "form-horizontal create-form", @enctype = "multipart/form-data", @style = "margin-top:5%" }))
                {
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-5 form-group">
                                <label>Họ</label>
                                @Html.TextBoxFor(model => model.FirstName, new { @class= "form-control", @placeholder= "Nhập họ.." })
                                @Html.ValidationMessageFor(model => model.FirstName, null, new { @class = "label label-danger", @style = "margin-left: 3%" })
                            </div>
                            <div class="col-sm-2"></div>
                            <div class="col-sm-5 form-group">
                                <label>Tên</label>
                                @Html.TextBoxFor(model => model.LastName, new { @class="form-control",@placeholder="Nhập tên"})
                                @Html.ValidationMessageFor(model => model.LastName, null, new { @class = "label label-danger", @style = "margin-left: 3%" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-5 form-group">
                                <label>Thành phố</label>
                                @Html.TextBoxFor(model => model.City, new { @class = "form-control", @placeholder = "Nhập tên thành phố" })
                                @Html.ValidationMessageFor(model => model.City, null, new { @class = "label label-danger" })
                            </div>
                            <div class="col-sm-2"></div>
                            <div class="col-sm-5 form-group">
                                <label>Zip</label>
                                @Html.TextBoxFor(model => model.ZipCode, new { @class = "form-control", @placeholder = "Nhập zip code" })
                                @Html.ValidationMessageFor(model => model.ZipCode, null, new { @class = "label label-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-5 form-group">
                                <label>Website</label>
                                @Html.TextBoxFor(model => model.WebSite, new { @class = "form-control", @placeholder = "Nhập địa chỉ website" })
                                @Html.ValidationMessageFor(model => model.WebSite, null, new { @class = "label label-danger" })
                            </div>
                            <div class="col-sm-2"></div>
                            <div class="col-sm-5 form-group">
                                <label>Company</label>
                                @Html.TextBoxFor(model => model.Company, new { @class = "form-control", @placeholder = "Nhập tên công ty" })
                                @Html.ValidationMessageFor(model => model.Company, null, new { @class = "label label-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Điện thoại</label>
                            @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @placeholder = "Nhập số điện thoại" })
                            @Html.ValidationMessageFor(model => model.Phone, null, new { @class = "label label-danger" })
                        </div>
                        <div class="form-group">
                            <label>Địa chỉ</label>
                            @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @placeholder = "Nhập địa chỉ" })
                            @Html.ValidationMessageFor(model => model.Address, null, new { @class = "label label-danger" })
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Nhập địa chỉ email" })
                            @Html.ValidationMessageFor(model => model.Email, null, new { @class = "label label-danger" })
                        </div>
                        <div class="form-group">
                            <label>Mật khẩu</label>
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Nhập mật khẩu" })
                            @Html.ValidationMessageFor(model => model.Password, null, new { @class = "label label-danger" })
                        </div>
                        <div class="form-group">
                            <label>Xác nhận mật khẩu</label>
                            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", @placeholder = "Xác nhận mật khẩu" })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, null, new { @class = "label label-danger" })
                        </div>
                        <input class="btn btn-lg btn-success btn-block" type="submit" value="Đăng kí">
                    </div>
                }
            </div>
        </div>
    </div>
    <footer class="footer">
        <div class="wrapper-footer">
            <span>©2017 Foody Corporation. Lầu 8, Tòa nhà Jabes 1, 244 Cống Quỳnh, P. Phạm Ngũ Lão, Quận 1, TP.HCM</span>
            <span style="margin-bottom:5px;">Số giấy phép ĐKKD: 0311828036 do sở Kế hoạch và Đầu Tư TPHCM cấp ngày 11/06/2012</span>
        </div>
        <div class="footer-line"></div>
    </footer>
</body>
</html>