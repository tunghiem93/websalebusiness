@{
    Layout = "~/Areas/ClientSite/Views/Shared/_Layout.cshtml";
}
@model ProjectWebSaleLand.Shared.Model.Product.ProductViewModels
@using ProjectWebSaleLand.Shared
<style type="text/css">
    .at-latest-news ul li {
        margin-bottom: 70px;
        padding-bottom: 70px;
    }

    .glyphicon {
        margin-right: 5px;
    }

    .thumbnail {
        margin-bottom: 20px;
        padding: 0px;
        -webkit-border-radius: 0px;
        -moz-border-radius: 0px;
        border-radius: 0px;
    }

    .item.list-group-item {
        float: none;
        width: 100%;
        background-color: #fff;
        margin-bottom: 10px;
    }

        /*.item.list-group-item:nth-of-type(odd):hover, .item.list-group-item:hover {
            background: #428bca;
        }*/

        .item.list-group-item .list-group-image {
            margin-right: 10px;
        }

        .item.list-group-item .thumbnail {
            margin-bottom: 0px;
        }

        .item.list-group-item .caption {
            padding: 9px 9px 0px 9px;
        }

        .item.list-group-item:nth-of-type(odd) {
            background: #eeeeee;
        }

        .item.list-group-item:before, .item.list-group-item:after {
            display: table;
            content: " ";
        }

        .item.list-group-item img {
            float: left;
        }

        .item.list-group-item:after {
            clear: both;
        }

    .list-group-item-text {
        margin: 0 0 11px;
    }

    img {
        width: 400px !important;
        height:250px !important;
    }

    .list-group-item {
        padding: 0.1px 0.1px;
    }
</style>
@*<div id="preloader"></div>*@
<!-- Inner page heading start from here -->
<section id="at-inner-title-sec">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="at-inner-title-box">
                    <h4 style="color: #CC935C; ">Kết quả tìm kiếm</h4>
                    <p>
                        @Html.ActionLink("Trang chủ", "Index", "Home", null, null) &nbsp;<i class="fa fa-angle-double-right" aria-hidden="true"></i> <a href="#">Tin</a>
                    </p>
                </div>
            </div>
            @*<div class="col-md-6 col-sm-6">
                <img src="images/title.png" alt="">
            </div>*@
        </div>
    </div>
</section>
<!-- Inner page heading end -->
<!-- Property start from here -->
<section class="at-property-sec">
    <div class="container">
        <div id="products" class="row list-group">
            @if (Model.ListProduct != null && Model.ListProduct.Any())
            {
                foreach (var item in Model.ListProduct)
                {
                    <a href="/Home/PropertiesDetail/@item.ID">
                        <div class="item list-group-item col-xs-4 col-lg-4">
                            <div class="thumbnail">
                                <img class="group list-group-image" src="@Url.Content(item.ImageURL)" alt="" />
                                <div class="caption">
                                    <p class="">
                                        @item.Name
                                    </p>
                                    <p class="">
                                       <i style="font-weight:bold">Địa chỉ:</i>  @item.Address
                                    </p>
                                    <p class="">
                                        <i style="font-weight:bold">Chiều dài:</i> @item.Length
                                    </p>
                                    <p class="">
                                        <i style="font-weight:bold">Chiệu rộng:</i> @item.Width
                                    </p>
                                    <p class="">
                                        <i style="font-weight:bold">Diện tích:</i> @item.Length x @item.Width m2
                                    </p>
                                    <p class="">
                                        <i style="font-weight:bold">Giá:</i> @item.Price
                                    </p>
                                    <div class="row">
                                        <p class="moretext">
                                            <i style="font-weight:bold">Mô tả:</i> @item.Description
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                }
            }
        </div>
        @*<div class="at-pagination">
                <ul class="pagination">
                    <li>
                        <a href="#"><i class="fa fa-angle-double-left" aria-hidden="true"></i></a>
                    </li>
                    <li>
                        <a href="#">1</a>
                    </li>
                    <li>
                        <a href="#">2</a>
                    </li>
                    <li>
                        <a href="#">3</a>
                    </li>
                    <li>
                        <a href="#">4</a>
                    </li>
                    <li>
                        <a href="#">5</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-angle-double-right" aria-hidden="true"></i></a>
                    </li>
                </ul>
            </div>*@
    </div>
</section>
<!-- Property End -->
<script type="text/javascript">
    $(document).ready(function () {
        var showChar = 200;

        $('.moretext').each(function () {
            var content = $(this).text();
            if (content.length > showChar) {
                var html = content.substr(0, showChar);
                html = html + "...";
                $(this).html(html);
            }

        });
    });
</script>
