@{
    Layout = "~/Areas/ClientSite/Views/Shared/_Layout.cshtml";
}
@model ProjectWebSaleLane.Shared.Model.Product.ProductDetailViewModels
@using ProjectWebSaleLand.Shared
<div id="preloader"></div>
<!-- Inner page heading start from here -->
<section id="at-inner-title-sec">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="at-inner-title-box">
                    <h4 style="color: #CC935C; ">Thông tin chi tiết</h4>
                    <p>
                        @Html.ActionLink("Trang chủ", "Index", "Home", null, null) <i class="fa fa-angle-double-right" aria-hidden="true"></i> <a href="#">@Model.Product.Name</a>
                    </p>
                </div>
            </div>
            @*<div class="col-md-6 col-sm-6">
                <img src="images/title.png" alt="">
            </div>*@
        </div>
    </div>
</section>
<!-- Inner page heading end -->
<!-- Property start from here -->
<section class="at-property-sec at-property-right-sidebar">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="at-property-details-col">
                    <div id="myCarousel" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        @if (Model.Product.ListImg != null && Model.Product.ListImg.Any())
                        {
                            <ol class="carousel-indicators">
                                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                @for (int i = 0; i < Model.Product.ListImg.Count; i++)
                                {
                                    int indexca = i + 1;
                                    <li data-target="#myCarousel" data-slide-to="@indexca"></li>
                                }
                            </ol>

                            <!-- Wrapper for slides -->
                            <div class="carousel-inner">
                                <div class="item active">
                                    <img src=@string.Format("{0}", string.IsNullOrEmpty(Model.Product.ImageURL) ? Commons.Image400_250 : Model.Product.ImageURL) alt="@Model.Product.Name" style="width:400px; height:250px">
                                </div>
                                @foreach (var itemin in Model.Product.ListImg)
                                {
                                    <div class="item">
                                        <img src=@string.Format("{0}", string.IsNullOrEmpty(itemin.ImageURL) ? Commons.Image400_250 : Model.Product.ImageURL) alt="@Model.Product.Name" style="width:400px; height:250px">
                                    </div>
                                }
                            </div>

                            <!-- Left and right controls -->
                            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                                <span class="fa fa-chevron-left glyphicon glyphicon-chevron-left"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                                <span class="fa fa-chevron-right glyphicon glyphicon-chevron-right"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        }
                    </div>
                    <!-- End Carousel -->
                    <p>@Model.Product.Description </p>
                    <div class="at-sec-title at-sec-title-left">
                        <h2>Property <span>Features</span></h2>
                        <div class="at-heading-under-line">
                            <div class="at-heading-inside-line"></div>
                        </div>
                        <p>Thông tin chi tiết</p>
                    </div>
                    <div class="row at-property-features">
                        <div class="col-md-6 clearfix">
                            <ul>
                                <li>
                                    Tên : <span class="pull-right">@Model.Product.Name</span>
                                </li>
                                <li>
                                    Diện tích : <span class="pull-right">@Model.Product.Acreage</span>
                                </li>
                                @if (Model.Product.Type == (int)Commons.EProductType.House)
                                {
                                <li>
                                    Phòng ngủ : <span class="pull-right">@Model.Product.BedRoom</span>
                                </li>
                                <li>
                                    Phòng tắm : <span class="pull-right">@Model.Product.BathRoom</span>
                                </li>
                                <li>
                                    Phòng khách : <span class="pull-right">@Model.Product.LivingRoom</span>
                                </li>
                                }
                                <li>
                                    Chiều dài : <span class="pull-right">@Model.Product.Length</span>
                                </li>
                                <li>
                                    Chiều rộng : <span class="pull-right">@Model.Product.Width</span>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul>
                                <li>
                                    Khu vực: <span class="pull-right">@Model.Product.Location</span>
                                </li>
                                <li>
                                    Điện thoại : <span class="pull-right"> @Model.Product.Phone</span>
                                </li>
                                <li>
                                    Địa chỉ : <span class="pull-right">@Model.Product.Address</span>
                                </li>

                                <li>
                                    Điện thoại 2 : <span class="pull-right">@Model.Product.Phone1</span>
                                </li>
                                <li>
                                    Địa chỉ 2 : <span class="pull-right">@Model.Product.Address1</span>
                                </li>
                                <li>
                                    Điện thoại 3 : <span class="pull-right">@Model.Product.Phone2</span>
                                </li>
                                <li>
                                    Địa chỉ 3 : <span class="pull-right">@Model.Product.Address2</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="at-sidebar at-col-default-mar">
                    <div class="at-sidebar-search at-sidebar-mar">
                        <form method="post">
                            <div class="input-group">
                                <input placeholder="Tìm kiếm....." class="form-control" name="search-field" type="text">
                                <span class="input-group-btn">
                                    <button type="submit" class="btn"><i class="fa fa-search"></i></button>
                                </span>
                            </div>
                        </form>
                    </div>
                    <div class="at-categories">
                        <h3 class="at-sedebar-title">Danh Mục</h3>
                        <ul>
                            @if (Model.ListLocation != null && Model.ListLocation.Any())
                            {
                                foreach (var itemLocation in Model.ListLocation)
                                {
                            <li>
                                <a href="#">@itemLocation.Name</a> <span class="">(@itemLocation.Total)</span>
                            </li>
                                }
                            }

                        </ul>
                    </div>
                    <div class="at-latest-news">
                        <h3 class="at-sedebar-title">Tin Cũ</h3>
                        <ul>
                            @if (Model.ListProduct != null && Model.ListProduct.Any())
                            {
                                foreach (var item in Model.ListProduct)
                                {
                            <li>
                                <div class="at-news-item">
                                    <img src=@string.Format("{0}", string.IsNullOrEmpty(item.ImageURL) ? Commons.Image100_50 : item.ImageURL) alt="" style="height: 50px; width: 100%">
                                    <h4><a href="#">@item.Name</a></h4>
                                    <p>@item.Description</p>
                                </div>
                            </li>
                                }
                            }
                        </ul>
                    </div>
                    <div class="at-preview">
                        <h3 class="at-sedebar-title">preview</h3>
                        <img src="@Url.Content("~/Images/property/preview.jpg")" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Property End -->
