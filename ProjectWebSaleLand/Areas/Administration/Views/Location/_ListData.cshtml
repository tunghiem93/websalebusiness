@model ProjectWebSaleLane.Shared.Model.Location.LocationViewModels
<div class="table-responsive">
    <div class="x_panel">
        <div class="x_title">
            <h2>
                Danh sách khu vực
            </h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="table-responsive">
                <table class="table table-striped table-bordered dt-responsive nowrap table table-striped jambo_table bulk_action" id="datatable-responsive" cellspacing="0" style="width:100%;">
                    <thead>
                        <tr class="headings">
                            <th class="column-title text-center">Tên</th>
                            <th class="column-title text-center">Tùy chỉnh</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.ListLocation != null)
                        {
                            for (int i = 0; i < Model.ListLocation.Count; i++)
                            {
                                string styleRow = "row-evenItem";
                                if (i % 2 == 0)
                                {
                                    styleRow = "row-oddItem";
                                }
                                var item = Model.ListLocation[i];
                                <tr class="@styleRow">
                                    <td style="color:#34495e; font-weight:bold;">&nbsp;&nbsp;&nbsp;@Model.ListLocation[i].Name</td>
                                    <td>
                                        <a href="#"
                                           onclick="ShowView('@Url.Action("View", "Location", new { id = item.ID })')"
                                           class="btn btn-primary btn-xs view details"><i class="fa fa-eye"></i>&nbsp;Xem</a>&nbsp;&nbsp;
                                        <a href="#"
                                           onclick="ShowView('@Url.Action("Edit", "Location", new { id = item.ID })')"
                                           class="btn btn-info btn-xs edit details"><i class="fa fa-edit"></i>&nbsp;Sửa</a>&nbsp;&nbsp;
                                        <a href="#"
                                           onclick="ShowView('@Url.Action("Delete", "Location", new { id = item.ID})')"
                                           class="btn btn-danger btn-xs delete details"><i class="fa fa-trash-o"></i>&nbsp;Xóa</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var handleDataTableButtons = function () {
            if ($("#datatable-buttons").length) {
                $("#datatable-buttons").DataTable({
                    dom: "Bfrtip",
                    responsive: true
                });
            }
        };

        TableManageButtons = function () {
            "use strict";
            return {
                init: function () {
                    handleDataTableButtons();
                }
            };
        }();

        $('#datatable').dataTable();
        $('#datatable-keytable').DataTable({
            keys: true
        });

        var table = $('#datatable-responsive').DataTable({
            "columnDefs": [
                { "orderable": false, "targets": [1] },
                { "width": "30%", "targets": [1] }
            ],
            "order": [[0, 'asc']],
            "displayLength": 25,
        });

        var table = $('#datatable-fixed-header').DataTable({
            fixedHeader: true
        });

        TableManageButtons.init();
    });
</script>