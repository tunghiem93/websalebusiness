        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12 lineHeight">Số phòng ngủ</label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextBoxFor(model => model.BedRoom, new { @class = "form-control has-feedback-left", autocomplete = "off", @type = "number" })
