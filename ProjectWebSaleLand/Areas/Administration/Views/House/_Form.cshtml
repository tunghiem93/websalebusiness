        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12 lineHeight">Số phòng tắm</label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextBoxFor(model => model.BathRoom, new { @class = "form-control has-feedback-left", autocomplete = "off", @type = "number" })
                <span class="fa fa-map-marker form-control-feedback left" aria-hidden="true"></span>
                @Html.ValidationMessageFor(model => model.BathRoom, null, new { @class = "label label-danger" })
            </div>
